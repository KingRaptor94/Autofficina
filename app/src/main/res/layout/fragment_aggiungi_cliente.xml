<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sfondoinserisci">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:alpha="1"
            android:src="@drawable/hometitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vogue"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="60sp"
            android:shadowColor="@color/black"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20"
            android:text="AGGIUNGI CLIENTE"
            android:textColor="#ECECEC"
            android:textSize="50sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


<TextView
    android:text="Inserisci i dati richiesti"
    android:textAllCaps="true"
    android:gravity="center"
    android:textSize="25dp"
    android:textColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:shadowDx="20"
    android:shadowDy="20"
    android:shadowRadius="20"/>



    <EditText
        android:id="@+id/nome_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Inserisci il nome"
        android:padding="10dp"
        android:background="#ECECEC"
        android:textStyle="italic"
        android:autofillHints="name"
        android:capitalize="words"
        />

    <EditText
        android:id="@+id/cognome_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Inserisci il cognome"
        android:padding="10dp"
        android:background="#ECECEC"
        android:textStyle="italic"
        android:autofillHints="name"
        android:capitalize="words"/>

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autoLink="email"
        android:hint="Inserisci l'email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="#ECECEC"
        android:textStyle="italic"
        android:autofillHints="emailAddress" />

    <Button
        android:id="@+id/bottoneAggCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Aggiungi Cliente"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        />
</LinearLayout>

    </LinearLayout>