<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondoinserisci"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:alpha="1"
            android:src="@drawable/hometitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vogue"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="60sp"
            android:shadowColor="@color/black"
            android:layout_marginTop="10sp"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20"
            android:text="AGGIUNGI INTERVENTO"
            android:textColor="#ECECEC"
            android:textSize="44sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20"
            android:text="Inserisci i dati richiesti"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/problema_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ECECEC"
            android:hint="Tipologia del problema"
            android:inputType="text"
            android:padding="10dp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/oreLavoro_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ECECEC"
            android:hint="Inserisci le ore di lavoro"
            android:inputType="number"
            android:padding="10dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/oraArrivo_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ECECEC"
            android:hint="Inserisci l'orario di arrivo"
            android:inputType="date"
            android:padding="10dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/oraRitiro_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ECECEC"
            android:hint="Inserisci l'orario di ritiro"
            android:inputType="date"
            android:padding="10dp"
            android:textStyle="italic" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/spinner_testo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#ECECEC"
                android:inputType="text"
                android:padding="10dp"
                android:text="Seleziona la targa del veicolo"
                android:textColor="@color/grey"
                android:textSize="17dp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner_veicolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp" />

        </FrameLayout>


        <Button
            android:id="@+id/bottoneAggIntervento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/black"
            android:padding="10dp"
            android:text="Aggiungi Intervento" />

    </LinearLayout>
</LinearLayout>
