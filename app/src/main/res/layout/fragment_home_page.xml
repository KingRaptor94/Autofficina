<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".fragments.HomePageFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/homebackground"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:layout_margin="0dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/hometitle"
        android:alpha="1"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/vogue"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="20sp"
        android:shadowColor="@color/black"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:text="GESTORE OFFICINA"
        android:textColor="#ECECEC"
        android:textSize="50sp"
        android:textStyle="bold"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:paddingHorizontal="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="80dp">

            <Button
                android:id="@+id/lista_clienti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="6"
                android:drawableBottom="@drawable/lista_clienti"
                android:text="LISTA CLIENTI" />

            <Button
                android:id="@+id/agg_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="AGGIUNGI"
                android:drawableBottom="@drawable/agg_icon"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lista_veicoli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="6"
                android:text="LISTA VEICOLI"
                android:drawableBottom="@drawable/lista_veicoli" />

            <Button
                android:id="@+id/agg_veicolo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="AGGIUNGI"
                android:drawableBottom="@drawable/agg_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lista_interventi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="6"
                android:backgroundTint="@color/black"
                android:text="LISTA INTERVENTI"
                android:drawableBottom="@drawable/lista_interventi" />

            <Button
                android:id="@+id/agg_intervento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="AGGIUNGI"
                android:drawableBottom="@drawable/agg_icon" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>